{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/typings",
    "outDir": "dist",
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2022",
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2021"]
  },
  "exclude": [
    "dist",
    "example-dist",
    "example",
    "test",
    "node_modules"
  ]
}
